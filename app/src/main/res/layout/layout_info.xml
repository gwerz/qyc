<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tl_break"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:stretchColumns="1">
    <include
        layout="@layout/layout_experter_info_avatar"></include>

    <TableRow
        android:onClick="doUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/info_text_style_title"
            android:text="@string/account_hint_nickname" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/info_text_style"/>

        <ImageView style="@style/right_arrow_style" />
    </TableRow>
    <View style="@style/menu_divider_style" />

    <TableRow
        android:onClick="doUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/info_text_style_title"
            android:text="@string/account_hint_phone" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/info_text_style"/>

        <ImageView style="@style/right_arrow_style" />
    </TableRow>
    <View style="@style/menu_divider_style" />

    <TableRow
        android:onClick="doUpdate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/info_text_style_title"
            android:text="@string/account_hint_sex" />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/info_text_style"/>

        <ImageView style="@style/right_arrow_style" />
    </TableRow>
    <View style="@style/menu_divider_style"
        android:visibility="gone"/>
</TableLayout>