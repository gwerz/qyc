<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/custom_widget_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp" />

    <EditText
        android:id="@+id/custom_widget_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_edttext_selector"
        android:paddingLeft="40dp"
        android:singleLine="true"
        android:textColor="@color/text_black_87"
        android:textColorHint="@color/text_black_30"
        android:textSize="@dimen/text_size_16" />

    <ImageButton
        android:id="@+id/custom_widget_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:src="@drawable/delete_up"
        android:visibility="gone" />


</RelativeLayout>