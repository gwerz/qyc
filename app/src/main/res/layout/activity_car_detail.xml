<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
        <TextView
            android:id="@+id/toolbar_title"
            style="@style/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tl_info"
        style="@style/info_layout_style"
        android:layout_below="@id/toolbar"
        android:padding="10dp"
        android:stretchColumns="1,3">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/info_text_style_title"
                android:text="@string/carNo" />

            <TextView
                style="@style/info_text_style"/>
            <TextView
                style="@style/info_text_style_title"
                android:text="@string/earn" />

            <TextView
                style="@style/info_text_style"/>
        </TableRow>
        <View style="@style/menu_divider_style" />
        <TextView
            style="@style/info_text_style"
            android:text="@string/address"/>
        <View style="@style/menu_divider_style" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/info_text_style_title"
                android:text="@string/status" />

            <TextView
                style="@style/info_text_style"/>

            <TextView
                style="@style/info_text_style"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    style="@style/button_style"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>
                <Button
                    style="@style/button_style"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>
            </LinearLayout>
        </TableRow>
        <View style="@style/menu_divider_style" />
        <TextView
            style="@style/info_text_style"
            android:text="@string/mark"/>
        <View style="@style/menu_divider_style" />
    </TableLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recyclerview_route"
        style="@style/xrecyclerview_style"
        android:layout_below="@id/tl_info"/>

    <FrameLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:visibility="gone"
        android:orientation="vertical"/>

</RelativeLayout>