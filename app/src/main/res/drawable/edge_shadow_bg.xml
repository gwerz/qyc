<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke
                android:width="1dip"
                android:color="@color/color_e2e2e2" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="0dp"
        android:right="0dp">
        <!-- show rectangle area -->
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>